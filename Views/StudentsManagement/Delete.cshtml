@model CETExamApp.Models.ApplicationUser
@using CETExamApp.Helpers
@{
    ViewData["Title"] = "Delete Student";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Student</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning!</strong> Are you sure you want to delete this student? This action cannot be undone.
                </div>
                
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <div class="col-md-3 text-center mb-3">
                            <img src="@Model.PhotoPath" alt="Student Photo" class="rounded" style="max-width: 100%; max-height: 150px;" />
                        </div>
                    }
                    <div class="@(!string.IsNullOrEmpty(Model.PhotoPath) ? "col-md-9" : "col-md-12")">
                        <dl class="row">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                            <dt class="col-sm-4">Class</dt>
                            <dd class="col-sm-8">
                                @if (Model.Class != null)
                                {
                                    @Model.Class.Name
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Group</dt>
                            <dd class="col-sm-8">
                                @if (Model.Group != null)
                                {
                                    @Model.Group.Name
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Mobile No</dt>
                            <dd class="col-sm-8">@Model.MobileNo</dd>

                            <dt class="col-sm-4">Parent's Mobile</dt>
                            <dd class="col-sm-8">@Model.ParentsMobileNo</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Created Date</dt>
                            <dd class="col-sm-8">@Model.CreatedDate.ToISTString() IST</dd>
                        </dl>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
