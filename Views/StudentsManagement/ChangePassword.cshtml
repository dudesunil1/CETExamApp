@model CETExamApp.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-key"></i> Change Password</h4>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Student:</strong> @Model.StudentName
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                        <label asp-for="NewPassword">New Password</label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <div class="form-text">Password must be at least 6 characters long</div>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
                        <label asp-for="ConfirmPassword">Confirm New Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> This will change the student's login password. The student will need to use the new password to login.
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Students
                        </a>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-key"></i> Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
