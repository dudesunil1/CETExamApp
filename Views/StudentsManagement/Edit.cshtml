@model CETExamApp.Models.ViewModels.StudentEditViewModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Student Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CurrentPhotoPath" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <h5 class="mb-3 text-primary"><i class="bi bi-person-badge"></i> Personal Information</h5>
                    
                    @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
                    {
                        <div class="mb-3">
                            <label class="form-label">Current Photo</label><br/>
                            <img src="@Model.CurrentPhotoPath" alt="Student Photo" class="rounded" style="max-width: 150px; max-height: 150px;" />
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="FirstName">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="LastName">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
                                    <option value="">-- Select Class --</option>
                                </select>
                                <label asp-for="ClassId">Class</label>
                                <span asp-validation-for="ClassId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <select asp-for="GroupId" class="form-select" asp-items="ViewBag.GroupId">
                                    <option value="">-- Select Group --</option>
                                </select>
                                <label asp-for="GroupId">Group (PCMB/PCB/PCM)</label>
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <select asp-for="Gender" class="form-select">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <label asp-for="Gender">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label">Update Photo (Optional)</label>
                        <input asp-for="Photo" class="form-control" type="file" accept="image/*" id="photoInput" onchange="previewImage(event)" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                        <small class="text-muted">Leave empty to keep current photo</small>
                        
                        <!-- Current Photo Display -->
                        @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
                        {
                            <div class="mt-3">
                                <strong>Current Photo:</strong><br />
                                <img src="@Model.CurrentPhotoPath" alt="Current Photo" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" id="currentPhoto" />
                            </div>
                        }
                        
                        <!-- New Image Preview -->
                        <div id="imagePreview" class="mt-3" style="display: none;">
                            <strong>New Photo Preview:</strong><br />
                            <img id="preview" src="" alt="Photo Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                            <button type="button" class="btn btn-sm btn-danger ms-2" onclick="clearImage()">
                                <i class="bi bi-x-circle"></i> Remove
                            </button>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4 text-primary"><i class="bi bi-telephone"></i> Contact Information</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="MobileNo" class="form-control" placeholder="Mobile Number" />
                                <label asp-for="MobileNo">Mobile Number</label>
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="ParentsMobileNo" class="form-control" placeholder="Parent's Mobile Number" />
                                <label asp-for="ParentsMobileNo">Parent's Mobile Number (Optional)</label>
                                <span asp-validation-for="ParentsMobileNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4 text-primary"><i class="bi bi-envelope"></i> Account Information</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <label asp-for="Username">Username</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email">Email (Optional)</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-check-circle"></i> Update Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }
        
        function clearImage() {
            document.getElementById('photoInput').value = '';
            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('preview').src = '';
        }
    </script>
}
