@model CETExamApp.Models.ApiKey

@{
    ViewData["Title"] = "Delete API Key";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete API Key</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this API key?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">API Key</dt>
                        <dd class="col-sm-9"><code>@Model.ApiKeyValue</code></dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@(Model.Email ?? "N/A")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.InActive)
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete API Key
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

