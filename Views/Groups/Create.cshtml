@model CETExamApp.Models.Group
@{
    ViewData["Title"] = "Create Group";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Student Group</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Group Name" />
                        <label asp-for="Name">Group Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <small class="text-muted">Example: PCMB, PCB, PCM</small>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Code" class="form-control" placeholder="Group Code" />
                        <label asp-for="Code">Group Code</label>
                        <span asp-validation-for="Code" class="text-danger"></span>
                        <small class="text-muted">Short code for the group</small>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
                            <option value="">-- Select Class (Optional) --</option>
                        </select>
                        <label asp-for="ClassId">Class</label>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                        <small class="text-muted">Assign this group to a specific class (10th/11th/12th)</small>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="text-muted">Example: Physics, Chemistry, Mathematics, Biology</small>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" checked />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>

                    <div class="alert alert-info">
                        <strong><i class="bi bi-info-circle"></i> Common Groups:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>PCMB:</strong> Physics, Chemistry, Mathematics, Biology (All subjects)</li>
                            <li><strong>PCB:</strong> Physics, Chemistry, Biology (Medical Stream)</li>
                            <li><strong>PCM:</strong> Physics, Chemistry, Mathematics (Engineering Stream)</li>
                        </ul>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Group
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

