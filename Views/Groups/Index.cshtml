@model IEnumerable<CETExamApp.Models.Group>
@using CETExamApp.Helpers
@{
    ViewData["Title"] = "Student Groups";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-diagram-3"></i> Student Groups (PCMB, PCB, PCM)</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Group
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Group Name</th>
                        <th>Code</th>
                        <th>Class</th>
                        <th>Description</th>
                        <th>Students</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Name</strong>
                                @if (item.Code == "PCMB")
                                {
                                    <span class="badge bg-danger ms-1">All Subjects</span>
                                }
                                else if (item.Code == "PCB")
                                {
                                    <span class="badge bg-info ms-1">Medical</span>
                                }
                                else if (item.Code == "PCM")
                                {
                                    <span class="badge bg-warning ms-1">Engineering</span>
                                }
                            </td>
                            <td><span class="badge bg-primary">@item.Code</span></td>
                            <td>
                                @if (item.Class != null)
                                {
                                    <span class="badge bg-secondary">@item.Class.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">No Class</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>@(item.Students?.Count ?? 0) students</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>@item.CreatedDate.ToISTString() IST</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-diagram-3-fill text-danger"></i> PCMB Group</h6>
                <p class="card-text small">Physics, Chemistry, Mathematics, Biology - All subjects</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-heart-pulse-fill text-info"></i> PCB Group</h6>
                <p class="card-text small">Physics, Chemistry, Biology - Medical Stream</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-gear-fill text-warning"></i> PCM Group</h6>
                <p class="card-text small">Physics, Chemistry, Mathematics - Engineering Stream</p>
            </div>
        </div>
    </div>
</div>

