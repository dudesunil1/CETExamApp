@model CETExamApp.Models.Group
@{
    ViewData["Title"] = "Delete Group";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Student Group</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning!</strong> Are you sure you want to delete this student group?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Code</dt>
                    <dd class="col-sm-8">@Model.Code</dd>

                    <dt class="col-sm-4">Class</dt>
                    <dd class="col-sm-8">
                        @if (Model.Class != null)
                        {
                            @Model.Class.Name
                        }
                        else
                        {
                            <span class="text-muted">No Class Assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Students</dt>
                    <dd class="col-sm-8">@(Model.Students?.Count ?? 0) students assigned</dd>
                </dl>

                @if (Model.Students?.Count > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> This group has @Model.Students.Count student(s) assigned. Deleting will remove their group assignment.
                    </div>
                }
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

