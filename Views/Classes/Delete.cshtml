@model CETExamApp.Models.Class
@{
    ViewData["Title"] = "Delete Class";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Class</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning!</strong> Are you sure you want to delete this class?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Code</dt>
                    <dd class="col-sm-8">@Model.Code</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Groups</dt>
                    <dd class="col-sm-8">@(Model.Groups?.Count ?? 0) groups assigned</dd>
                </dl>

                @if (Model.Groups?.Count > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> This class has @Model.Groups.Count group(s) assigned. Deleting may affect those groups.
                    </div>
                }
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

