@using CETExamApp.Services
@inject ITenantService TenantService
@{
    ViewData["Title"] = "Home Page";
    var tenantSettings = TenantService.GetTenantSettings();
}

<div class="text-center">
    <h1 class="display-4">Welcome to @tenantSettings.ExamCenterName</h1>
    <p class="lead">Your trusted platform for online examinations</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-clipboard-check display-1 text-primary"></i>
                <h5 class="card-title mt-3">Easy Testing</h5>
                <p class="card-text">Take exams securely from anywhere with our user-friendly platform.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield-check display-1 text-success"></i>
                <h5 class="card-title mt-3">Secure & Reliable</h5>
                <p class="card-text">Your data and exam results are protected with enterprise-grade security.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-graph-up display-1 text-info"></i>
                <h5 class="card-title mt-3">Track Progress</h5>
                <p class="card-text">Monitor your performance and improvement with detailed analytics.</p>
            </div>
        </div>
    </div>
</div>

@if (!User.Identity?.IsAuthenticated ?? true)
{
    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h3>Get Started Today</h3>
            <p class="lead">Join thousands of students already using our platform</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">
                <i class="bi bi-person-plus"></i> Register Now
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        </div>
    </div>
}

