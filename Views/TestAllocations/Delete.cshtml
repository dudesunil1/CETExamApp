@model CETExamApp.Models.TestAllocation
@using CETExamApp.Helpers
@{
    ViewData["Title"] = "Remove Test Allocation";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Remove Test Allocation</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning!</strong> Are you sure you want to remove this test allocation?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Test</dt>
                    <dd class="col-sm-8">@Model.Test?.Title</dd>

                    <dt class="col-sm-4">Class</dt>
                    <dd class="col-sm-8">@Model.Test?.Class?.Name</dd>

                    <dt class="col-sm-4">Student</dt>
                    <dd class="col-sm-8">@Model.Student?.FirstName @Model.Student?.LastName (@Model.Student?.Email)</dd>

                    <dt class="col-sm-4">Group</dt>
                    <dd class="col-sm-8">@(Model.Student?.Group?.Name ?? "Not assigned")</dd>

                    <dt class="col-sm-4">Allocated Date</dt>
                    <dd class="col-sm-8">@Model.AllocatedDate.ToIST().ToString("dd/MM/yyyy HH:mm") IST</dd>

                    <dt class="col-sm-4">Scheduled Start</dt>
                    <dd class="col-sm-8">@(Model.ScheduledStartTime?.ToIST().ToString("dd/MM/yyyy HH:mm") ?? "Not set")@(Model.ScheduledStartTime != null ? " IST" : "")</dd>

                    <dt class="col-sm-4">Scheduled End</dt>
                    <dd class="col-sm-8">@(Model.ScheduledEndTime?.ToIST().ToString("dd/MM/yyyy HH:mm") ?? "Not set")@(Model.ScheduledEndTime != null ? " IST" : "")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                    </dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Remove Allocation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

