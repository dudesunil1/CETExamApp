@model List<CETExamApp.Models.TestAllocation>
@{
    ViewData["Title"] = "Reschedule Test for Multiple Students";
    var test = ViewBag.Test as CETExamApp.Models.Test;
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="bi bi-calendar-event"></i> Reschedule Test for All Students</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-primary">
                    <h5><i class="bi bi-info-circle"></i> Test Information</h5>
                    <strong>Test:</strong> @test?.Title<br/>
                    <strong>Class:</strong> @test?.Class?.Name<br/>
                    <strong>Total Students Allocated:</strong> @Model.Count
                </div>

                <h5 class="mb-3">Students to be Rescheduled:</h5>
                <div class="table-responsive mb-4" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th>Email</th>
                                <th>Group</th>
                                <th>Current Schedule</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var allocation in Model)
                            {
                                <tr>
                                    <td>@allocation.Student?.FirstName @allocation.Student?.LastName</td>
                                    <td>@allocation.Student?.Email</td>
                                    <td>
                                        @if (allocation.Student?.Group != null)
                                        {
                                            <span class="badge bg-info">@allocation.Student.Group.Name</span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            @(allocation.ScheduledStartTime?.ToLocalTime().ToString("dd/MM HH:mm") ?? "Not set") - 
                                            @(allocation.ScheduledEndTime?.ToLocalTime().ToString("dd/MM HH:mm") ?? "Not set")
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <form asp-action="RescheduleMultiple" method="post">
                    <input type="hidden" name="testId" value="@test?.Id" />
                    
                    <h5 class="mb-3 text-primary">New Schedule (for all students)</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">New Start Date & Time</label>
                                <input type="datetime-local" name="scheduledStartTime" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">New End Date & Time</label>
                                <input type="datetime-local" name="scheduledEndTime" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> This will update the schedule for all @Model.Count student(s) allocated to this test.
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-route-testId="@test?.Id" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-calendar-check"></i> Reschedule All Students
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

