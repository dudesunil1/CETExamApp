@model Dictionary<string, CETExamApp.Models.ViewModels.TopicPerformance>
@using CETExamApp.Models
@{
    ViewData["Title"] = "Topic-wise Performance";
    var test = ViewBag.Test as Test;
    var totalStudents = (int)ViewBag.TotalStudents;
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-bookmark-star"></i> Topic-wise Performance Analysis</h4>
            </div>
            <div class="card-body">
                <h5>@test?.Title</h5>
                <p><strong>Subject:</strong> @test?.Subject?.Name</p>
                <p><strong>Total Students Completed:</strong> @totalStudents</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Topic Performance Summary</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Topic Name</th>
                                <th>Questions</th>
                                <th>Correct Answers</th>
                                <th>Wrong Answers</th>
                                <th>Success Rate</th>
                                <th>Marks Obtained</th>
                                <th>Total Marks</th>
                                <th>Average %</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var topic in Model.Values.OrderByDescending(t => t.Percentage))
                            {
                                <tr>
                                    <td><strong>@topic.TopicName</strong></td>
                                    <td>@topic.QuestionsAttempted</td>
                                    <td><span class="badge bg-success">@topic.CorrectAnswers</span></td>
                                    <td><span class="badge bg-danger">@topic.WrongAnswers</span></td>
                                    <td>
                                        @if (topic.QuestionsAttempted > 0)
                                        {
                                            <text>@(((decimal)topic.CorrectAnswers / topic.QuestionsAttempted * 100).ToString("0.00"))%</text>
                                        }
                                        else
                                        {
                                            <text>0%</text>
                                        }
                                    </td>
                                    <td>@topic.MarksObtained</td>
                                    <td>@topic.TotalMarks</td>
                                    <td>@topic.Percentage.ToString("0.00")%</td>
                                    <td>
                                        <div class="progress" style="height: 25px; min-width: 120px;">
                                            <div class="progress-bar @(topic.Percentage >= 75 ? "bg-success" : topic.Percentage >= 50 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @topic.Percentage%">
                                                @topic.Percentage.ToString("0")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Performance Analysis -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Topic Performance Insights</h5>
            </div>
            <div class="card-body">
                @{
                    var strongTopics = Model.Values.Where(t => t.Percentage >= 75).ToList();
                    var averageTopics = Model.Values.Where(t => t.Percentage >= 50 && t.Percentage < 75).ToList();
                    var weakTopics = Model.Values.Where(t => t.Percentage < 50).ToList();
                }

                <div class="row">
                    <div class="col-md-4">
                        <div class="alert alert-success">
                            <h6><i class="bi bi-trophy"></i> Strong Topics (@strongTopics.Count)</h6>
                            <ul class="mb-0">
                                @foreach (var topic in strongTopics)
                                {
                                    <li>@topic.TopicName (@topic.Percentage.ToString("0.00")%)</li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-warning">
                            <h6><i class="bi bi-dash-circle"></i> Average Topics (@averageTopics.Count)</h6>
                            <ul class="mb-0">
                                @foreach (var topic in averageTopics)
                                {
                                    <li>@topic.TopicName (@topic.Percentage.ToString("0.00")%)</li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-danger">
                            <h6><i class="bi bi-exclamation-triangle"></i> Weak Topics (@weakTopics.Count)</h6>
                            <ul class="mb-0">
                                @foreach (var topic in weakTopics)
                                {
                                    <li>@topic.TopicName (@topic.Percentage.ToString("0.00")%)</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Results
    </a>
</div>

