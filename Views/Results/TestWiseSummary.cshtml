@model CETExamApp.Models.ViewModels.TestWiseSummaryViewModel
@{
    ViewData["Title"] = "Test-wise Summary";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-file-earmark-bar-graph"></i> Test-wise Summary Report</h4>
                <a asp-action="ExportTestResultsExcel" asp-route-testId="@Model.Test?.Id" class="btn btn-light btn-sm">
                    <i class="bi bi-file-excel"></i> Export Excel
                </a>
            </div>
            <div class="card-body">
                <h5>@Model.Test?.Title</h5>
                <div class="row">
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Class:</strong> @(Model.Test?.Class?.Name ?? "All")</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Duration:</strong> @Model.Test?.DurationMinutes min</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Total Marks:</strong> @Model.Test?.TotalMarks</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h3>@Model.TotalAllocated</h3>
                <p class="mb-0">Allocated</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h3>@Model.TotalCompleted</h3>
                <p class="mb-0">Completed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h3>@Model.TotalPending</h3>
                <p class="mb-0">Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h3>@Model.AveragePercentage.ToString("0.00")%</h3>
                <p class="mb-0">Class Average</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <h4 class="text-success">@Model.PassCount</h4>
                <p class="mb-0">Passed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h4 class="text-danger">@Model.FailCount</h4>
                <p class="mb-0">Failed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h4 class="text-primary">@Model.HighestScore</h4>
                <p class="mb-0">Highest Score</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-secondary">
            <div class="card-body text-center">
                <h4 class="text-secondary">@Model.LowestScore</h4>
                <p class="mb-0">Lowest Score</p>
            </div>
        </div>
    </div>
</div>

<!-- Topic-wise Analysis -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Topic-wise Class Performance</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Topic</th>
                                <th>Questions</th>
                                <th>Correct</th>
                                <th>Wrong</th>
                                <th>Success Rate</th>
                                <th>Average %</th>
                                <th>Performance Bar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var topic in Model.TopicWiseAnalysis.Values.OrderByDescending(t => t.Percentage))
                            {
                                <tr>
                                    <td><strong>@topic.TopicName</strong></td>
                                    <td>@topic.QuestionsAttempted</td>
                                    <td><span class="badge bg-success">@topic.CorrectAnswers</span></td>
                                    <td><span class="badge bg-danger">@topic.WrongAnswers</span></td>
                                    <td>
                                        @if (topic.QuestionsAttempted > 0)
                                        {
                                            <text>@(((decimal)topic.CorrectAnswers / topic.QuestionsAttempted * 100).ToString("0.00"))%</text>
                                        }
                                    </td>
                                    <td>@topic.Percentage.ToString("0.00")%</td>
                                    <td>
                                        <div class="progress" style="height: 25px; min-width: 150px;">
                                            <div class="progress-bar @(topic.Percentage >= 75 ? "bg-success" : topic.Percentage >= 50 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @topic.Percentage%">
                                                @topic.Percentage.ToString("0")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Student Results List -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-people"></i> Student Results</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Student Name</th>
                                <th>Group</th>
                                <th>Obtained</th>
                                <th>Total</th>
                                <th>Percentage</th>
                                <th>Result</th>
                                <th>Time Taken</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int rank = 1; }
                            @foreach (var result in Model.Results.OrderByDescending(r => r.Percentage))
                            {
                                <tr>
                                    <td>
                                        @if (rank <= 3)
                                        {
                                            <span class="badge bg-warning">@rank</span>
                                        }
                                        else
                                        {
                                            <span>@rank</span>
                                        }
                                    </td>
                                    <td>@result.Student?.FirstName @result.Student?.LastName</td>
                                    <td><span class="badge bg-info">@result.Student?.Group?.Name</span></td>
                                    <td>@result.ObtainedMarks</td>
                                    <td>@result.TotalMarks</td>
                                    <td>@result.Percentage.ToString("0.00")%</td>
                                    <td>
                                        @if (result.IsPassed)
                                        {
                                            <span class="badge bg-success">PASS</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">FAIL</span>
                                        }
                                    </td>
                                    <td>@result.TimeTakenMinutes min</td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" asp-route-testId="@Model.Test?.Id" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Results
    </a>
    <a asp-action="TopicWisePerformance" asp-route-testId="@Model.Test?.Id" class="btn btn-success">
        <i class="bi bi-diagram-3"></i> Topic Analysis
    </a>
</div>

